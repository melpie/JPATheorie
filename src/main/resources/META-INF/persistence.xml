<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
			xmlns="http://java.sun.com/xml/ns/persistence"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
			http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="vdab1">
		<non-jta-data-source>java:/comp/env/jdbc/vdab1</non-jta-data-source>
		<class>be.vdab.entities.Docent</class>
		<class>be.vdab.entities.Cursus</class>
		<class>be.vdab.entities.KlassikaleCursus</class>
		<class>be.vdab.entities.ZelfstudieCursus</class>
		<class>be.vdab.valueobjects.Adres</class>
		<class>be.vdab.entities.Campus</class>
		<class>be.vdab.valueobjects.TelefoonNr</class>
		<class>be.vdab.valueobjects.EmailAdres</class>
		<class>be.vdab.entities.Verantwoordelijkheid</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
	
</persistence>